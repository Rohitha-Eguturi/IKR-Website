<script>
    document.getElementById('saveButton').addEventListener('click', function(e) {
        e.preventDefault();
        alert('Verification data has been successfully saved!');
        
        // This is the final step, usually, it would redirect back to the search/home screen.
        // For now, it just shows the alert.
    });

    // Ensure the correct sidebar item is marked active
    document.addEventListener('DOMContentLoaded', () => {
        const menuItems = document.querySelectorAll('.menu-item');
        menuItems.forEach(item => {
            if (item.textContent.trim() === 'Verification Transaction') {
                item.classList.add('active');
            } else {
                item.classList.remove('active');
            }
        });
    });
</script>
